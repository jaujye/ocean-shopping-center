# Ocean Shopping Center - Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Environment
NODE_ENV=development
APP_NAME=Ocean Shopping Center
APP_URL=http://localhost:3001

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ocean_shopping_center
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ocean_shopping_center

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# Application Ports
BACKEND_PORT=3000
FRONTEND_PORT=3001

# Development Tools (optional)
PGADMIN_EMAIL=admin@oceanshoppingcenter.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=8080

REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin
REDIS_COMMANDER_PORT=8081

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_change_in_production
SESSION_MAX_AGE=86400000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@oceanshoppingcenter.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Payment Configuration (Stripe example)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache Configuration
CACHE_TTL=300
PRODUCT_CACHE_TTL=600
USER_CACHE_TTL=900

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ENABLE_SEARCH_INDEXING=true

# API Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Development Flags
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true

# =================================================================
# PRODUCTION MONITORING AND PERFORMANCE CONFIGURATION
# =================================================================

# Environment Configuration
ENVIRONMENT=production
APP_VERSION=latest
DOMAIN=oceanshoppingcenter.com
SSL_EMAIL=admin@oceanshoppingcenter.com

# Production URLs
PRODUCTION_FRONTEND_URL=https://oceanshoppingcenter.com
REACT_APP_API_URL=https://api.oceanshoppingcenter.com
REACT_APP_WS_URL=wss://api.oceanshoppingcenter.com/ws

# SSL Configuration
SSL_ENABLED=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
USE_FORWARD_HEADERS=true

# Database Performance Configuration
DB_POOL_SIZE=50
DB_POOL_MIN_IDLE=10
POSTGRES_INITDB_ARGS=--auth-local=trust --auth-host=scram-sha-256

# Redis Performance Configuration  
REDIS_DATABASE=0
REDIS_CLUSTER_ENABLED=true

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_this_password
PROMETHEUS_RETENTION=30d
ALERTMANAGER_RETENTION=7d

# Alert Configuration
ALERT_EMAIL_FROM=alerts@oceanshoppingcenter.com
ALERT_EMAIL_TO=ops-team@oceanshoppingcenter.com
PAYMENT_ALERT_EMAIL=payments@oceanshoppingcenter.com
SLACK_API_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Performance Targets
API_RESPONSE_TARGET_P99=200
DATABASE_QUERY_TARGET_P95=100  
CACHE_HIT_RATIO_TARGET=0.95
PAGE_LOAD_TARGET=2000
CONCURRENT_USERS_TARGET=10000

# Load Testing Configuration
LOAD_TEST_USERS=1000
LOAD_TEST_DURATION=10m
BASE_URL=http://backend:8080
FRONTEND_URL=http://frontend:80

# Backup Configuration
BACKUP_ROOT=/opt/backups
RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *
GPG_KEY_ID=your_gpg_key_id_for_encryption

# Auto-scaling Configuration
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_TARGET_UTILIZATION=70
MEMORY_TARGET_UTILIZATION=80

# Security Configuration (Production)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password
STRIPE_SANDBOX=false
DHL_SANDBOX=false
FEDEX_SANDBOX=false

# External Monitoring Services (Optional)
DATADOG_API_KEY=your_datadog_api_key
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
SENTRY_DSN=your_sentry_dsn

# High Availability Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
GRACEFUL_SHUTDOWN_TIMEOUT=30s

# CDN Configuration
CDN_URL=https://cdn.oceanshoppingcenter.com
STATIC_ASSETS_URL=https://assets.oceanshoppingcenter.com

# Compliance and Privacy
DATA_RETENTION_DAYS=2555  # 7 years
LOG_RETENTION_DAYS=90
GDPR_COMPLIANCE=true
CCPA_COMPLIANCE=true