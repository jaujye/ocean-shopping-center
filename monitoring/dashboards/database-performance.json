{
  "id": null,
  "title": "Database Performance - Ocean Shopping Center",
  "tags": ["database", "postgresql", "performance"],
  "style": "dark",
  "timezone": "browser", 
  "refresh": "30s",
  "schemaVersion": 30,
  "version": 1,
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Database Status",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 0, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "pg_up",
          "legendFormat": "Database Up",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 4, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 80}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count{state=\"active\"}",
          "legendFormat": "Active",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "Connection Pool Usage",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 8, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          },
          "unit": "percent"
        }
      },
      "targets": [
        {
          "expr": "(hikaricp_connections_active / hikaricp_connections_max) * 100",
          "legendFormat": "Pool Usage",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Query Performance (95th percentile)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 12, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          },
          "unit": "ms"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(pg_stat_statements_mean_time_seconds_bucket[5m])) * 1000",
          "legendFormat": "P95 Query Time",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Database Size",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 16, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "bytes"
        }
      },
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname!=\"template0\",datname!=\"template1\"}",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "Deadlocks",
      "type": "stat",
      "gridPos": {"h": 6, "w": 4, "x": 20, "y": 0},
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": 0},
              {"color": "red", "value": 1}
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "rate(pg_stat_database_deadlocks[5m])",
          "legendFormat": "Deadlocks/sec",
          "refId": "A"
        }
      ]
    },
    {
      "id": 7,
      "title": "Connection Activity Over Time",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
      "targets": [
        {
          "expr": "pg_stat_activity_count{state=\"active\"}",
          "legendFormat": "Active",
          "refId": "A"
        },
        {
          "expr": "pg_stat_activity_count{state=\"idle\"}",
          "legendFormat": "Idle",
          "refId": "B"
        },
        {
          "expr": "pg_stat_activity_count{state=\"idle in transaction\"}",
          "legendFormat": "Idle in Transaction",
          "refId": "C"
        }
      ],
      "legend": {"displayMode": "table", "placement": "right"}
    },
    {
      "id": 8,
      "title": "Transaction Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit[5m])",
          "legendFormat": "Commits/sec",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback[5m])",
          "legendFormat": "Rollbacks/sec",
          "refId": "B"
        }
      ],
      "yAxes": [
        {"label": "Transactions/sec", "side": "left"}
      ]
    },
    {
      "id": 9,
      "title": "Buffer Cache Hit Ratio",
      "type": "graph",
      "gridPos": {"h": 8, "w": 8, "x": 0, "y": 14},
      "targets": [
        {
          "expr": "(rate(pg_stat_database_blocks_hit[5m]) / (rate(pg_stat_database_blocks_hit[5m]) + rate(pg_stat_database_blocks_read[5m]))) * 100",
          "legendFormat": "Hit Ratio %",
          "refId": "A"
        }
      ],
      "yAxes": [
        {"min": 0, "max": 100, "unit": "percent"}
      ]
    },
    {
      "id": 10,
      "title": "Query Duration Distribution",
      "type": "graph",
      "gridPos": {"h": 8, "w": 8, "x": 8, "y": 14},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, rate(pg_stat_statements_mean_time_seconds_bucket[5m])) * 1000",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, rate(pg_stat_statements_mean_time_seconds_bucket[5m])) * 1000",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, rate(pg_stat_statements_mean_time_seconds_bucket[5m])) * 1000",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yAxes": [
        {"label": "Duration (ms)", "side": "left"}
      ]
    },
    {
      "id": 11,
      "title": "Top Slow Queries",
      "type": "table",
      "gridPos": {"h": 8, "w": 8, "x": 16, "y": 14},
      "targets": [
        {
          "expr": "topk(10, pg_stat_statements_mean_time_seconds)",
          "format": "table",
          "refId": "A"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {"Time": true, "__name__": true},
            "renameByName": {
              "query": "Query",
              "Value": "Avg Time (s)"
            }
          }
        }
      ]
    },
    {
      "id": 12,
      "title": "Lock Waits",
      "type": "graph",
      "gridPos": {"h": 6, "w": 12, "x": 0, "y": 22},
      "targets": [
        {
          "expr": "pg_locks_count{mode=\"AccessExclusiveLock\"}",
          "legendFormat": "AccessExclusiveLock",
          "refId": "A"
        },
        {
          "expr": "pg_locks_count{mode=\"ShareUpdateExclusiveLock\"}",
          "legendFormat": "ShareUpdateExclusiveLock", 
          "refId": "B"
        },
        {
          "expr": "pg_locks_count{mode=\"RowExclusiveLock\"}",
          "legendFormat": "RowExclusiveLock",
          "refId": "C"
        }
      ]
    },
    {
      "id": 13,
      "title": "Replication Lag",
      "type": "graph",
      "gridPos": {"h": 6, "w": 12, "x": 12, "y": 22},
      "targets": [
        {
          "expr": "pg_replication_lag_seconds",
          "legendFormat": "Replica {{client_addr}}",
          "refId": "A"
        }
      ],
      "yAxes": [
        {"label": "Lag (seconds)", "side": "left"}
      ]
    },
    {
      "id": 14,
      "title": "Checkpoint Performance",
      "type": "graph",
      "gridPos": {"h": 6, "w": 24, "x": 0, "y": 28},
      "targets": [
        {
          "expr": "rate(pg_stat_bgwriter_checkpoints_timed[5m])",
          "legendFormat": "Timed Checkpoints/sec",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_bgwriter_checkpoints_req[5m])",
          "legendFormat": "Requested Checkpoints/sec",
          "refId": "B"
        },
        {
          "expr": "pg_stat_bgwriter_checkpoint_write_time / pg_stat_bgwriter_checkpoints_timed",
          "legendFormat": "Avg Checkpoint Write Time (ms)",
          "refId": "C"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "name": "database",
        "type": "query", 
        "query": "label_values(pg_database_size_bytes, datname)",
        "refresh": 1,
        "includeAll": true,
        "multi": true
      }
    ]
  }
}